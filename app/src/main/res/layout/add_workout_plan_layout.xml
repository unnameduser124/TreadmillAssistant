<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id = "@+id/plan_name_input_layout">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/plan_name_input"
            android:hint="Plan name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id = "@+id/add_workout_plan_phase_list"
        app:layout_constraintBottom_toTopOf="@id/add_new_phase"
        app:layout_constraintTop_toBottomOf="@id/plan_name_input_layout"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/add_new_phase"
        android:text = "Add new phase"
        app:layout_constraintTop_toBottomOf="@id/add_workout_plan_phase_list"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/total_duration_workout_plan_label"
        app:layout_constraintTop_toBottomOf="@id/add_new_phase"
        android:layout_marginStart = "10dp"
        android:layout_marginEnd = "10dp"
        android:text = "Total duration: 0 min"
        android:textSize = "20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/total_distance_workout_plan_label"
        app:layout_constraintTop_toBottomOf="@id/total_duration_workout_plan_label"
        android:layout_marginStart = "10dp"
        android:layout_marginEnd = "10dp"
        android:text = "Total distance: 0 km"
        android:textSize = "20dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id = "@+id/workout_plan_save_button"
        android:text = "save"
        app:layout_constraintTop_toBottomOf="@id/total_distance_workout_plan_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf = "@id/cancel_button"
        android:layout_margin="10dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id = "@+id/cancel_button"
        android:text = "cancel"
        app:layout_constraintBottom_toBottomOf="@id/workout_plan_save_button"
        app:layout_constraintTop_toTopOf="@id/workout_plan_save_button"
        app:layout_constraintStart_toEndOf="@id/workout_plan_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd = "10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>