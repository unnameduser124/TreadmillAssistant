<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id = "@+id/add_workout_plan_phase_list"
        app:layout_constraintTop_toTopOf = "parent"
        app:layout_constraintBottom_toTopOf="@id/add_new_phase"
        android:layout_margin="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/add_new_phase"
        android:text = "Add new phase"
        app:layout_constraintTop_toBottomOf="@id/add_workout_plan_phase_list"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/save_as_preset"
        app:layout_constraintTop_toBottomOf="@id/add_new_phase"
        android:layout_margin = "10dp"
        android:text = "Save as present"
        android:textSize = "20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/total_duration_workout_plan_label"
        app:layout_constraintTop_toBottomOf="@id/save_as_preset"
        android:layout_marginStart = "10dp"
        android:layout_marginEnd = "10dp"
        android:text = "Total duration: 69 minutes"
        android:textSize = "20dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id = "@+id/workout_plan_save_button"
        android:text = "save"
        app:layout_constraintTop_toBottomOf="@id/total_duration_workout_plan_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf = "@id/cancel_button"
        android:layout_margin="10dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id = "@+id/cancel_button"
        android:text = "cancel"
        app:layout_constraintBottom_toBottomOf="@id/workout_plan_save_button"
        app:layout_constraintTop_toTopOf="@id/workout_plan_save_button"
        app:layout_constraintStart_toEndOf="@id/workout_plan_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd = "10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>